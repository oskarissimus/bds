#!/usr/bin/env bds


# Trivial example task
for(int i=0 ; i < 10 ; i++ ) {
    in := "/tmp/in.$i\.txt"
    out	:= "/tmp/out1.$i\.txt"
    out2 := "/tmp/out2.$i\.txt"

    in.write('0123456789')

    task([out, out2] <- in, taskName := "MyTask_$i", cpus := 2) {
        sys echo "processing file '$in'"
        sys sleep $i
        sys date > $out
        sys date > $out2
    }
}

