{
    "name": "bds",
    "displayName": "bds",
    "description": "bds programming language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "bds",
                "aliases": [
                    "bds",
                    "bds"
                ],
                "extensions": [
                    ".bds"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bds",
                "scopeName": "source.bds",
                "path": "./syntaxes/bds.tmLanguage.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "typescript": "^5.1.6"
    },
    "devDependencies": {
        "@types/node": "^20.4.9",
        "@types/vscode": "^1.81.0"
    }
}