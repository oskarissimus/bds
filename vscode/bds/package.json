{
    "name": "bds-extension",
    "version": "0.3.6",
    "description": "VS Code extension for BDS Language",
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:bds"
    ],
    "repository": {
        "url": "https://github.com/oskarissimus/bds.git",
        "type": "git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "merge-grammar": "node syntaxes/mergeGrammar.js",
        "compile": "npm run merge-grammar && tsc -b",
        "watch": "nodemon -e json --watch ./syntaxes --exec \"npm run merge-grammar\" & tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "jest --coverage"
    },
    "engines": {
        "vscode": "^1.81.1"
    },
    "contributes": {
        "languages": [
            {
                "id": "bds",
                "extensions": [
                    ".bds"
                ],
                "aliases": [
                    "BDS",
                    "bds"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bds",
                "scopeName": "source.bds",
                "path": "./syntaxes/bds.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "BDS Language Configuration",
            "properties": {
                "bds-extension.sourceRootDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Specify the source root directory for the BDS language server."
                }
            }
        }
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "jest": "^29.6.2",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*.test.(ts|js)"
        ]
    }
}
