{
    "name": "bds-extension",
    "version": "0.1.1",
    "description": "VS Code extension for BDS Language",
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:bds"
    ],
    "repository": {
        "url": "https://github.com/oskarissimus/bds.git",
        "type": "git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "nyc mocha -r ts-node/register client/src/**/*.test.ts server/src/**/*.test.ts"
    },
    "engines": {
        "vscode": "^1.81.1"
    },
    "contributes": {
        "languages": [
            {
                "id": "bds",
                "extensions": [
                    ".bds"
                ],
                "aliases": [
                    "BDS",
                    "bds"
                ],
                "configuration": "./language-configuration"
            }
        ],
        "grammars": [
            {
                "language": "bds",
                "scopeName": "source.bds",
                "path": "./syntaxes/bds.tmLanguage 20220607.json"
            }
        ]
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.5",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "include": [
            "client/src/**/*.ts",
            "server/src/**/*.ts"
        ],
        "exclude": [
            "**/*.test.ts"
        ],
        "reporter": [
            "text-summary",
            "lcov"
        ]
    }
}
