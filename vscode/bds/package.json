{
    "name": "bds-extension",
    "version": "0.1.1",
    "description": "VS Code extension for BDS Language",
    "main": "./client/out/extension",
    "activationEvents": [
        "onLanguage:bds"
    ],
    "repository": {
        "url": "https://github.com/oskarissimus/bds.git",
        "type": "git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "jest --coverage"
    },
    "engines": {
        "vscode": "^1.81.1"
    },
    "contributes": {
        "languages": [
            {
                "id": "bds",
                "extensions": [
                    ".bds"
                ],
                "aliases": [
                    "BDS",
                    "bds"
                ],
                "configuration": "./language-configuration"
            }
        ],
        "grammars": [
            {
                "language": "bds",
                "scopeName": "source.bds",
                "path": "./syntaxes/bds.tmLanguage 20220607.json"
            }
        ]
    },
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "jest": "^29.6.2",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/src/**/*.test.(ts|js)"
        ]
    }
}